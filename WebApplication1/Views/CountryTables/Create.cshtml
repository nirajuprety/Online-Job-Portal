@model DatabaseLayer.CountryTable

@{
    ViewBag.Title = "Create";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-7 col-md-7">
            <h3 class="mb-30">Create Cities</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>CountryTable</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mt-4">

                @Html.EditorFor(model => model.Country, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control single-input",
               @type = "text",
               @name = "first_name",
               @placeholder = "First Name",
               @onfocus = "this.placeholder = ''",
               @onblur = "this.placeholder = 'First Name'",
               @required = "true"
                    }
                })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })

            </div>

            <div class="form-group mt-4">

                <input type="submit" value="Save" class="genric-btn primary-border e-large" , style="float :right;" />


            </div>
        </div>

            }
            <div>
            </div>

        </div>
    </div>
</div>

