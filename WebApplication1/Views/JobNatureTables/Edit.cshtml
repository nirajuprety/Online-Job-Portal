@model DatabaseLayer.JobNatureTable

@{
    ViewBag.Title = "Edit";
}

<div class="section-top-border">
    <div class="row">
        <div class="col-lg-7 col-md-7">
            <h3 class="mb-30">Edit Job Nature @Html.ActionLink("New Job Nature", "Create", null, new { @class = "btn btn-default", @style = "float : right" })</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                   
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.JobNature)

                    <div class="mt-4">

                        @Html.EditorFor(model => model.JobNature, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control single-input",
                       @type = "text",
                       @name = "job_Nature",
                       @placeholder = "Job Nature",
                       @onfocus = "this.placeholder = ''",
                       @onblur = "this.placeholder = 'Job Nature'",
                       @required = "true"
                            }
                        })
                        @Html.ValidationMessageFor(model => model.JobNature, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group mt-4">

                        <input type="submit" value="Update" class="genric-btn primary-border e-large" , style="float :right;" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default", @style = "float:left" })

                    </div>
                </div>

            }
            <div>
            </div>

        </div>
    </div>
</div>


